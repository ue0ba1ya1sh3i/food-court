{
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "disallowLegacyRuntimeConfig": true,

      "ignore": [
        "node_modules",
        ".git",
        "*.log"
      ],

      "predeploy": [
        "npm --prefix \"$RESOURCE_DIR\" run build"
      ]
    }
  ],

  "hosting": {
    "public": "dist",

    "ignore": [
      "**/*.map"
    ],

    "headers": [
      {
        "source": "**/*.@(js|css)",
        "headers": [
          { "key": "Cache-Control", "value": "public,max-age=31536000,immutable" }
        ]
      }
    ],

    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },

  "firestore": {
    "database": "(default)",
    "location": "asia-northeast1",
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },

  "storage": {
    "rules": "storage.rules"
  },

  "emulators": {
    "auth": {
      "port": 9099
    },

    "functions": {
      "port": 5001
    },

    "firestore": {
      "port": 8080
    },

    "hosting": {
      "port": 5000,
      "disableCache": true
    },

    "storage": {
      "port": 9199
    },

    "ui": {
      "enabled": true
    },

    "singleProjectMode": true
  }
}
